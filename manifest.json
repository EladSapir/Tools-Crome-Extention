{
    "manifest_version": 3,
    "name": "Utility Tools",
    "version": "1.0",
    "description": "A collection of utility tools: PDF manipulation, full-page screenshots, and dark mode enforcement.",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  